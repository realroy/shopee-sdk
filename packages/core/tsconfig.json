{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "target": "ES2015",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "declaration": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./packages/core/src/*"],
    }
  },
  "include": ["src"],
}
